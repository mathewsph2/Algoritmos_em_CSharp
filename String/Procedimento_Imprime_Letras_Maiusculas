// Imprime somente os caracteres mai√∫sculos da string:

namespace Strings
{
    public class Program
    {
        public static void Main(string[] args)
        {
            string texto;

            Console.WriteLine("Informe um caractere: ");
            texto = (Console.ReadLine());

            for (int i = 0; i < texto.Length; i++)
            {
                LeChar(texto[i]);
            }
        }
        public static void LeChar(char x)
        {
            if (x >= 'A' && x <= 'Z')
            {
                Console.Write("{0}", x);
            }
        }
    }
}
