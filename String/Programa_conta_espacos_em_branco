// 1) Fazer um programa para contar o número de espaços em branco de uma string.

namespace EspacosEmBranco
{
    public class Program
    {
        public static void Main(string[] args)
        {
            string palavra;
            int countBrancos = 0;

            Console.WriteLine("Informe uma sentença: ");
            palavra = Console.ReadLine();

            for (int i = 0; i < palavra.Length; i++)
            {
                if ((palavra[i]) == (' '))
                {
                    countBrancos++;
                }
            }
            Console.WriteLine("O número de espaços em branco informados foi de {0}: ", countBrancos);
        }
    }
}

